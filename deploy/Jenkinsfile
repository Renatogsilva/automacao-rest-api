pipeline {
    agent any

    tools {
        maven 'Maven 3.9.9'
    }

    environment {
        MAVEN_OPTS = "-Dmaven.surefire.debug=true"
        // Força o Maven a mostrar detalhes do que está acontecendo nos testes
    }

    stages {
        stage('Build Project') {
            steps {
                sh 'mvn clean install -DskipTests'
            }
        }
        stage('Run Tests') {
            steps {
                sh 'mvn test -Dmaven.surefire.failIfNoTests=false'
            }
        }
        stage('Reporting Test') {
            steps {
                sh 'echo GENERATE REPORT...'
            }
            post {
                always {
                    allure includeProperties: false, results: [[path: 'allure-results']]
                }
            }
        }
    }
    post {
        always {
            // Aqui, verifica o status do build diretamente e define o status como SUCCESS ou UNSTABLE
            script {
                if (currentBuild.result == 'FAILURE' || currentBuild.result == 'UNSTABLE') {
                    currentBuild.result = 'UNSTABLE'  // Garantir que o pipeline não seja sucesso se algo falhou
                } else {
                    currentBuild.result = 'SUCCESS'  // Define como sucesso se tudo correr bem
                }
            }
        }
    }
}