pipeline {
    agent any

    tools {
        maven 'MAVEN_HOME'
    }

    stages {
        stage('Build Project') {
            steps {
                bat 'mvn clean install -DskipTests'
            }
        }
        stage('Run Tests') {
            steps {
                catchError(buildResult: 'FAILURE', stageResult: 'FAILURE') {
                    bat 'mvn test'
                }
            }
        }
        stage('Reporting Test') {
            steps {
                bat 'echo GENERATE REPORT...'
            }
            post {
                always {
                    allure includeProperties: false, results: [[path: 'allure-results']]
                }
            }
        }
    }
}